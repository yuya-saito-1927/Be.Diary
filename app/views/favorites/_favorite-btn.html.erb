<% if detail.favorited_by?(current_user) %>
  <%= link_to diary_diary_detail_favorites_path(detail.diary, detail), method: :delete, remote: true do %>
    <span class="text-primary">
      <i class="far fa-thumbs-up"></i>
      <%= detail.favorites.count %>
    </span>
  <% end %>
<% else %>
  <%= link_to diary_diary_detail_favorites_path(detail.diary, detail), method: :post, remote: true do %>
    <span class="text-secondary">
      <i class="far fa-thumbs-up"></i>
      <%= detail.favorites.count %>
    </span>
  <% end %>
<% end %>
