<!--新規ユーザー登録画面-->
<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <h4 style="background-color: #808080; color: white;">新規登録</h4>
    </div>
  </div>
  <!--ユーザ情報入力フォーム-->
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 offset-md-1 text-left">
        <%= f.label :'ユーザ名*' %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :user_name, aurofocus: true, placeholder: "サイト内で使用する名前", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 offset-md-1 text-left">
        <%= f.label :'メールアドレス*' %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.email_field :email, autofocus: true, placeholder: 'sample@example.com', size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 offset-md-1 text-left">
        <%= f.label :'パスワード（６文字以上）' %>
      </div>
      <div class="col-md-1 text-left">
        <%= f.password_field :password, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 offset-md-1 text-left">
        <%= f.label :'パスワード（確認用）' %>
      </div>
      <div class="col-md-1 text-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-1 offset-md-3 text-right">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-ig btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
  <!--ログイン画面遷移ボタン-->
  <div class="row">
    <div class="col-md-3 text-center" style="margin: 30px 0 35px 0;">
      <h4 style="background-color: #808080; color: white;">既に登録済みの方</h4>
    </div>
  </div>
  <p class="col-md-4 offset-md-1 text-left"><%= link_to 'こちら', new_user_session_path %>　からログインしてください</p>
</div>
